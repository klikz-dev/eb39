    --font--paragraph--size: 25px;
    --font--heading--family: "Decima", Consolas, monospace;
    --font--heading--weight: 700;
    --font--heading--normal-weight: 400;
    --font--heading--style: normal;
    --font--accent--family: "Decima Bold", Consolas, monospace;
    --font--accent--weight: 700;
    --font--accent--style: normal;
    --font--paragraph--family: "Decima", Consolas, monospace;
